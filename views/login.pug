extends layouts/main.pug

block content

    div(class="container w-50")

        div(class="mb-4")
            h2 Connexion

        if error
            div(class="alert alert-danger") #{error}

        form(method='POST' action='/login')

            div(class="form-group")
                label(for='email') Email :
                input#email(type='text' name='email' class="form-control" required)

            div(class="form-group")
                label(for='password') Mot de passe :
                input#password(type='password' name='password' class="form-control" required)
                
            button(type='submit' class="btn btn-success mx-auto" style="width: 150px") Se connecter